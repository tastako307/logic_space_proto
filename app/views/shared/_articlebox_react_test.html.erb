<div class="article-box">
  <div class="article-form">
    <%= form_with model: article, class:"article-form-field", local: true do |f| %>

      <div class="title-field">
        <label class="article-labels">タイトル</label>
        <%= f.text_field :title, place_holder: "記事タイトルをここに書いてください", class: "article-title-field" %>
      </div>
      <div class="summary-field">
        <label class="article-labels">概要（最大１００文字）</label>
        <%= f.text_area :summary, place_holder: "記事の概要をここに書いてください", class: "article-summary-field" %>
      </div>
      <div class="text-field">
        <label class="article-labels">記事本文</label>
        <%= f.text_area :text, place_holder: "記事の内容をここに書いてください（マークダウン記法使用可）",class: "article-text-field" %>
      </div>
      <div class="article-btn-field">
        <%= f.submit "投稿する", class: "article-submit-btn" %>
      </div>
    <% end %>
  </div>
  <div class="article-preview">
    <h1 class="preview-label">記事プレビュー</h1>
    <%=  react_component("preview") %>
  </div>
</div>